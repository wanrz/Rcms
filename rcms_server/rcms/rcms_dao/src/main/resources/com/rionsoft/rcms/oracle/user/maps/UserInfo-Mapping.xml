   <select id="selectExist" resultType="String" parameterType="com.rionsoft.rcms.entry.user.UserInfoEntry">
	  SELECT
	    LOGIN_CODE
	   FROM
	     USER_INFO
	    WHERE LOGIN_CODE IN 
	    <foreach collection="entryList" item="entry" open="(" close=")" separator=",">
			#{entry.loginCode}
		</foreach>
