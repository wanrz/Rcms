    <select id="queryContract" resultMap="bdDictDetail" >
	  SELECT
	     PK_DETAIL,
	     DETAIL_NAME
	   FROM
	     BD_DICT_DETAIL
	    WHERE PK_DICT = '2'  AND FLAG= '1'
    </select>
    
    <select id="queryEmployee" resultMap="bdDictDetail" >
